  <metadata>
    <id>CSharpGameLibrary</id>
    <version>0.1.5-alpha</version>
    <title>C# Game Library</title>
    <authors>Ryan Vazquez</authors>
    <owners>vazgriz</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <licenseUrl>https://github.com/vazgriz/CSharpGameLibrary/blob/master/license.txt</licenseUrl>
